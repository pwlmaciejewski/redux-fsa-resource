{
  "compilerOptions": {
    "outDir": "lib",
    "target": "es5",
    "module": "es6",
    "moduleResolution": "node",
    "jsx": "react",
    "allowJs": false,
    "allowSyntheticDefaultImports": false,
    "declaration": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "lib": ["es6", "dom", "es7", "es2017"]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
